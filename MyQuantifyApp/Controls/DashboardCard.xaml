<UserControl x:Class="MyQuantifyApp.Controls.DashboardCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyQuantifyApp.Controls"
             mc:Ignorable="d"
             Width="180" Height="80">

    <Border Background="#F0F0F0" CornerRadius="10" Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左边图标 -->
            <Image Source="{Binding Icon}" Width="40" Height="40" VerticalAlignment="Center"/>

            <!-- 右边文字和数值 -->
            <Grid Grid.Column="1" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 上面文字说明 -->
                <TextBlock Text="{Binding Title}" FontSize="14" Foreground="#333" VerticalAlignment="Bottom"/>

                <!-- 下面数值和单位 -->
                <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Top">
                    <TextBlock Text="{Binding Value}" FontSize="20" FontWeight="Bold" Foreground="#12BDCF"/>
                    <TextBlock Text="{Binding Unit}" FontSize="14" Foreground="#666" Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
