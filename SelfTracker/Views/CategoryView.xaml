<UserControl x:Class="SelfTracker.Views.CategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#F5F7F9" 
             FontFamily="Microsoft YaHei, Segoe UI"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#2563EB"/>
        <SolidColorBrush x:Key="PrimaryBlueLight" Color="#EFF6FF"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#10B981"/>
        <SolidColorBrush x:Key="WarningOrange" Color="#F59E0B"/>
        <SolidColorBrush x:Key="DangerRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="TextMain" Color="#1E293B"/>
        <SolidColorBrush x:Key="TextSub" Color="#64748B"/>
        <SolidColorBrush x:Key="BorderLight" Color="#E2E8F0"/>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="16" Margin="0,0,20,0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="20" ShadowDepth="4"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="应用列表" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextMain}" Margin="0,0,0,16"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
                        <RadioButton x:Name="RbAll" Content="全部" IsChecked="True" Checked="FilterChanged" Margin="0,0,12,0" FontSize="13" Foreground="{StaticResource TextMain}"/>
                        <RadioButton x:Name="RbCategorized" Content="已分类" Checked="FilterChanged" Margin="0,0,12,0" FontSize="13" Foreground="{StaticResource TextMain}"/>
                        <RadioButton x:Name="RbUncategorized" Content="未分类" Checked="FilterChanged" FontSize="13" Foreground="{StaticResource TextMain}"/>
                    </StackPanel>

                    <ListBox x:Name="ProcessListBox" Grid.Row="2" BorderThickness="0" Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             SelectionChanged="ProcessListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10,8" BorderBrush="{StaticResource BorderLight}" BorderThickness="0,0,0,1" Background="Transparent" Cursor="Hand">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding ProcessName}" FontWeight="Bold" FontSize="13" Foreground="{StaticResource TextMain}" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Category}" FontSize="11" Foreground="{StaticResource TextSub}" Margin="0,4,0,0"/>
                                        </StackPanel>
                                        <Border Grid.Column="1" Background="{StaticResource PrimaryBlueLight}" CornerRadius="4" Padding="8,2" VerticalAlignment="Center" Margin="8,0,0,0">
                                            <TextBlock Text="{Binding Category}" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource PrimaryBlue}"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Border Grid.Row="3" Background="#F8FAFC" CornerRadius="8" Padding="10,8" Margin="0,16,0,0" BorderBrush="{StaticResource BorderLight}" BorderThickness="1">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock x:Name="TxtTotalCount" Text="总计: 0" FontSize="12" Foreground="{StaticResource TextMain}" Margin="0,0,12,0"/>
                            <TextBlock x:Name="TxtCategorizedCount" Text="已分类: 0" FontSize="12" Foreground="{StaticResource SuccessGreen}" Margin="0,0,12,0" FontWeight="SemiBold"/>
                            <TextBlock x:Name="TxtUncategorizedCount" Text="未分类: 0" FontSize="12" Foreground="{StaticResource WarningOrange}" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="White" CornerRadius="12" Padding="24" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="20" ShadowDepth="4"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="标签管理" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextMain}" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtCategoryCount" Text="(0 个标签)" FontSize="13" Foreground="{StaticResource TextSub}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" MaxHeight="160" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="CategoryItemsControl">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource PrimaryBlueLight}" CornerRadius="6" Padding="10,5" Margin="0,0,8,8" BorderBrush="#BFDBFE" BorderThickness="1">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock x:Name="CategoryTextBlock" Text="{Binding}" FontSize="13" Foreground="{StaticResource PrimaryBlue}" VerticalAlignment="Center" FontWeight="Medium"/>
                                                <TextBox x:Name="CategoryEditBox" Text="{Binding Path=.}" FontSize="13" MinWidth="70" Visibility="Collapsed" VerticalAlignment="Center" Margin="0,0,6,0" KeyDown="CategoryEditBox_KeyDown" LostFocus="CategoryEditBox_LostFocus"/>
                                                <Button Content="✎" Width="24" Height="24" FontSize="12" Background="Transparent" BorderThickness="0" Margin="8,0,0,0" Cursor="Hand" Click="EditCategory_Click" Tag="{Binding}" Foreground="{StaticResource PrimaryBlue}"/>
                                                <Button Content="✕" Width="24" Height="24" FontSize="12" Background="Transparent" BorderThickness="0" Margin="2,0,0,0" Cursor="Hand" Click="DeleteCategory_Click" Tag="{Binding}" Foreground="{StaticResource DangerRed}"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <Border Grid.Row="2" Background="#F8FAFC" CornerRadius="8" Padding="12" Margin="0,16,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TxtNewCategory" Padding="12,0" VerticalContentAlignment="Center" Margin="0,0,12,0" FontSize="13" KeyDown="TxtNewCategory_KeyDown" Height="36" BorderBrush="{StaticResource BorderLight}"/>
                                <Button Grid.Column="1" Content="+ 添加新标签" Padding="20,0" Click="AddCategory_Click" FontSize="13" FontWeight="Bold" Cursor="Hand" Height="36" Background="{StaticResource SuccessGreen}" Foreground="White">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="24">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="20" ShadowDepth="4"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="设置应用分类" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextMain}" Margin="0,0,0,16"/>

                        <Border Grid.Row="1" Background="#F1F5F9" CornerRadius="8" Padding="16" Margin="0,0,0,20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="选中应用：" FontSize="13" Foreground="{StaticResource TextSub}"/>
                                    <TextBlock x:Name="TxtSelectedProcess" Text="未选择" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextMain}" Margin="8,0,0,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBlock Text="当前分类：" FontSize="13" Foreground="{StaticResource TextSub}"/>
                                    <TextBlock x:Name="TxtCurrentCategory" Text="-" FontSize="14" FontWeight="Bold" Margin="8,0,0,0" Foreground="{StaticResource PrimaryBlue}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="快速指派新标签：" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextSub}" Margin="0,0,0,12"/>
                                <ItemsControl x:Name="CategorySelectionControl">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding}" Tag="{Binding}" Click="ApplyCategory_Click" 
                                                    Margin="0,0,10,10" Padding="14,7" FontSize="13" Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="White"/>
                                                        <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </ScrollViewer>

                        <Border Grid.Row="3" Background="#ECFDF5" CornerRadius="8" Padding="12" Margin="0,16,0,0" BorderBrush="#A7F3D0" BorderThickness="1">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedItem, ElementName=ProcessListBox}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💡" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="请从左侧列表选择一个应用以快速设置分类" FontSize="12" Foreground="#065F46" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>