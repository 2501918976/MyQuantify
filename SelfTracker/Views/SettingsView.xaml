<UserControl x:Class="SelfTracker.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="Transparent" Loaded="UserControl_Loaded"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1000">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="SettingCard" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="16" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="SettingLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="NavButton" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="bg" Background="Transparent" CornerRadius="10" Margin="0,3">
                            <Grid>
                                <Border x:Name="indicator" Width="4" Background="#4E73DF" CornerRadius="2"
                                        HorizontalAlignment="Left" Visibility="Collapsed"/>
                                <ContentPresenter Margin="20,12"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#F0F4FF"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#E3EDFF"/>
                                <Setter TargetName="indicator" Property="Visibility" Value="Visible"/>
                                <Setter Property="Foreground" Value="#4E73DF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4E73DF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3d5fc4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F9FA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InfoCard" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧导航 -->
        <Border Grid.Column="0" Background="Transparent" BorderBrush="#E5E7EB" BorderThickness="0,0,1,0">
            <StackPanel Margin="16,28">
                <StackPanel Orientation="Horizontal" Margin="15,0,0,40">
                    <Border Background="#4E73DF" Width="8" Height="8" CornerRadius="4" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="设置中心" FontSize="20" FontWeight="Bold" Foreground="#2C3E50"/>
                </StackPanel>

                <RadioButton Content="📊 数据采集" Style="{StaticResource NavButton}" IsChecked="True" x:Name="NavData"/>
                <RadioButton Content="🎨 界面外观" Style="{StaticResource NavButton}" x:Name="NavAppearance"/>
                <RadioButton Content="⚙️ 系统设置" Style="{StaticResource NavButton}" x:Name="NavSystem"/>
                <RadioButton Content="ℹ️ 版本信息" Style="{StaticResource NavButton}" x:Name="NavAbout"/>

                <!-- 底部信息 -->
                <Border Background="Transparent" CornerRadius="8" Padding="12" Margin="10,120,10,0">
                    <StackPanel>
                        <TextBlock Text="💡 提示" FontSize="11" FontWeight="SemiBold" Foreground="#6C757D" Margin="0,0,0,6"/>
                        <TextBlock Text="修改设置后记得保存" FontSize="10" Foreground="#95A5A6" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- 右侧内容区 -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="32,28,40,30">

                <!-- 数据采集页面 -->
                <StackPanel Visibility="{Binding IsChecked, ElementName=NavData, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="数据采集" Style="{StaticResource SectionTitle}"/>
                    <Border Style="{StaticResource SettingCard}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 数据入库频率 -->
                            <StackPanel Grid.Row="0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Border Background="#E3F2FD" Width="32" Height="32" CornerRadius="8" Margin="0,0,12,0">
                                        <TextBlock Text="📥" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="数据入库频率" FontSize="15" FontWeight="SemiBold" Foreground="#2C3E50"/>
                                        <TextBlock Text="控制多久将数据写入数据库一次" FontSize="11" Foreground="#95A5A6"/>
                                    </StackPanel>
                                </StackPanel>
                                <Grid Margin="44,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider x:Name="SliderLogInterval"
                                            Minimum="20" Maximum="600"
                                            TickFrequency="10"
                                            IsSnapToTickEnabled="True"
                                            Value="30"
                                            VerticalAlignment="Center"
                                            ValueChanged="SliderLogInterval_ValueChanged"/>
                                    <Border Grid.Column="1"
                                            Background="#E3F2FD"
                                            CornerRadius="6"
                                            Padding="10,6"
                                            Margin="12,0,0,0">
                                        <TextBlock x:Name="TxtLogIntervalValue"
                                                 Text="30 秒"
                                                 FontSize="13"
                                                 FontWeight="SemiBold"
                                                 Foreground="#1976D2"
                                                 TextAlignment="Center"/>
                                    </Border>
                                </Grid>
                                <TextBlock Text="建议设为 30-60 秒。更短的时间数据更安全，但会增加磁盘写入频率。"
                                         Margin="44,8,0,0"
                                         FontSize="11"
                                         Foreground="#95A5A6"/>
                            </StackPanel>

                            <Separator Grid.Row="1" Background="#F0F0F0" VerticalAlignment="Center"/>

                            <!-- AFK 判断时间 -->
                            <StackPanel Grid.Row="2">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Border Background="#FFF3E0" Width="32" Height="32" CornerRadius="8" Margin="0,0,12,0">
                                        <TextBlock Text="⏱️" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="AFK 判断时间" FontSize="15" FontWeight="SemiBold" Foreground="#2C3E50"/>
                                        <TextBlock Text="无操作超过此时间将标记为离开状态" FontSize="11" Foreground="#95A5A6"/>
                                    </StackPanel>
                                </StackPanel>
                                <Grid Margin="44,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider x:Name="SliderAFKTimeout"
                                            Minimum="15" Maximum="1200"
                                            TickFrequency="15"
                                            IsSnapToTickEnabled="True"
                                            Value="180"
                                            VerticalAlignment="Center"
                                            ValueChanged="SliderAFKTimeout_ValueChanged"/>
                                    <Border Grid.Column="1"
                                            Background="#FFF3E0"
                                            CornerRadius="6"
                                            Padding="10,6"
                                            Margin="12,0,0,0">
                                        <TextBlock x:Name="TxtAFKTimeoutValue"
                                                 Text="3 分钟"
                                                 FontSize="13"
                                                 FontWeight="SemiBold"
                                                 Foreground="#F57C00"
                                                 TextAlignment="Center"/>
                                    </Border>
                                </Grid>
                                <TextBlock Text="建议设为 3-5 分钟。时间过短可能导致正常思考时间被误判为离开。"
                                         Margin="44,8,0,0"
                                         FontSize="11"
                                         Foreground="#95A5A6"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- 界面外观页面 -->
                <StackPanel Visibility="{Binding IsChecked, ElementName=NavAppearance, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="界面外观" Style="{StaticResource SectionTitle}"/>
                    <Border Style="{StaticResource SettingCard}">
                        <StackPanel>
                            <!-- 主题颜色和透明度 -->
                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Border Background="#F3E5F5" Width="32" Height="32" CornerRadius="8" Margin="0,0,12,0">
                                            <TextBlock Text="🎨" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="主题颜色" FontSize="15" FontWeight="SemiBold" Foreground="#2C3E50" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <ComboBox x:Name="ComboTheme" SelectedIndex="0" Padding="12,8" FontSize="13">
                                        <ComboBoxItem Content="经典蓝" Tag="#4E73DF"/>
                                        <ComboBoxItem Content="深邃紫" Tag="#673AB7"/>
                                        <ComboBoxItem Content="森野绿" Tag="#4CAF50"/>
                                        <ComboBoxItem Content="热情红" Tag="#E91E63"/>
                                        <ComboBoxItem Content="暗夜黑" Tag="#2D2D30"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Border Background="#E1F5FE" Width="32" Height="32" CornerRadius="8" Margin="0,0,12,0">
                                            <TextBlock Text="✍️" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="字体颜色" FontSize="15" FontWeight="SemiBold" Foreground="#2C3E50" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <ComboBox x:Name="ComboTextColor" SelectedIndex="0" Padding="12,8" FontSize="13">
                                        <ComboBoxItem Content="深邃黑" Tag="#2C3E50"/>
                                        <ComboBoxItem Content="纯白色" Tag="#FFFFFF"/>
                                        <ComboBoxItem Content="淡灰色" Tag="#7F8C8D"/>
                                        <ComboBoxItem Content="主题同步" Tag="Auto"/>
                                    </ComboBox>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="4">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Border Background="#E8F5E9" Width="32" Height="32" CornerRadius="8" Margin="0,0,12,0">
                                            <TextBlock Text="✨" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="背景透明度" FontSize="15" FontWeight="SemiBold" Foreground="#2C3E50" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider x:Name="SliderOpacity"
                                                Minimum="0.3" Maximum="1.0"
                                                TickFrequency="0.05"
                                                IsSnapToTickEnabled="True"
                                                Value="0.95"
                                                VerticalAlignment="Center"
                                                ValueChanged="SliderOpacity_ValueChanged"/>
                                        <TextBlock Grid.Column="1"
                                                 x:Name="TxtOpacityValue"
                                                 Text="95%"
                                                 FontSize="13"
                                                 FontWeight="SemiBold"
                                                 Foreground="#4CAF50"
                                                 TextAlignment="Right"
                                                 VerticalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>

                            <Separator Background="#F0F0F0" Margin="0,0,0,24"/>

                            <!-- 背景图片 -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <Border Background="#FFF8E1" Width="32" Height="32" CornerRadius="8" Margin="0,0,12,0">
                                    <TextBlock Text="🖼️" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="背景图片" FontSize="15" FontWeight="SemiBold" Foreground="#2C3E50" VerticalAlignment="Center"/>
                            </StackPanel>

                            <UniformGrid Columns="3" Margin="0,0,0,16">
                                <RadioButton x:Name="RbNoBackground"
                                           Content="无背景"
                                           GroupName="BG"
                                           IsChecked="True"
                                           FontSize="13"
                                           Margin="0,0,8,0"/>
                                <RadioButton x:Name="RbBingBackground"
                                           Content="Bing 壁纸"
                                           GroupName="BG"
                                           FontSize="13"
                                           Margin="4,0"
                                           Checked="RbBingBackground_Checked"/>
                                <RadioButton x:Name="RbCustomBackground"
                                           Content="自定义图片"
                                           GroupName="BG"
                                           FontSize="13"
                                           Margin="8,0,0,0"
                                           Checked="RbCustomBackground_Checked"/>
                            </UniformGrid>

                            <Grid Visibility="{Binding IsChecked, ElementName=RbCustomBackground, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TxtCustomImagePath"
                                       IsEnabled="False"
                                       VerticalContentAlignment="Center"
                                       Padding="12,8"
                                       FontSize="13"
                                       Margin="0,0,10,0"/>
                                <Button Grid.Column="1"
                                      Content="选择文件"
                                      Style="{StaticResource SecondaryButton}"
                                      Padding="16,8"
                                      Click="BrowseImage_Click"/>
                            </Grid>

                            <TextBlock Text="背景图片会应用到主窗口，建议选择色调柔和的图片以保证文字可读性。"
                                     Margin="0,12,0,0"
                                     FontSize="11"
                                     Foreground="#95A5A6"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- 系统设置页面 -->
                <StackPanel Visibility="{Binding IsChecked, ElementName=NavSystem, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="系统设置" Style="{StaticResource SectionTitle}"/>
                    <Border Style="{StaticResource SettingCard}">
                        <StackPanel>
                            <!-- 自动启动 -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Background="#E8EAF6" Width="32" Height="32" CornerRadius="8" Margin="0,0,12,0">
                                    <TextBlock Text="🚀" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="开机自动启动" FontSize="15" FontWeight="SemiBold" Foreground="#2C3E50"/>
                                    <TextBlock Text="程序将在 Windows 登录后自动在后台开始监测" FontSize="11" Foreground="#95A5A6"/>
                                </StackPanel>
                            </StackPanel>
                            <CheckBox x:Name="ChkAutoStart"
                                    Content="启用开机自动启动"
                                    FontSize="13"
                                    Margin="44,0,0,24"/>

                            <Separator Background="#F0F0F0" Margin="0,0,0,24"/>

                            <!-- 保存按钮 -->
                            <Grid>
                                <Border Background="#E8F5E9" CornerRadius="8" Padding="12">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="💡" FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock Text="修改后请点击保存按钮以应用新设置"
                                                 VerticalAlignment="Center"
                                                 Foreground="#2E7D32"
                                                 FontSize="12"/>
                                    </StackPanel>
                                </Border>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="重置默认"
                                          Style="{StaticResource SecondaryButton}"
                                          Width="100"
                                          Padding="0,10"
                                          Margin="0,0,12,0"
                                          Click="Reset_Click"/>
                                    <Button Content="保存所有设置"
                                          Style="{StaticResource PrimaryButton}"
                                          Width="140"
                                          Padding="0,10"
                                          Click="Save_Click"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- 版本信息页面 -->
                <StackPanel Visibility="{Binding IsChecked, ElementName=NavAbout, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="版本信息" Style="{StaticResource SectionTitle}"/>
                    <!-- Logo 区域 -->
                    <Border Grid.Column="0"
                                    Background="Transparent"
                                    Width="80" Height="80"
                                    CornerRadius="12"
                                    Margin="0,0,24,0">
                    </Border>
                    
                    <!-- 软件信息卡片 -->
                    <Border Style="{StaticResource SettingCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>


                            <!-- 软件信息 -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="SelfTracker" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
                                <TextBlock Text="个人时间追踪与效率分析工具" FontSize="13" Foreground="#6C757D" Margin="0,4,0,8"/>
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#E3F2FD" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                                        <TextBlock Text="版本 1.0.0" FontSize="11" Foreground="#1976D2" FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Background="#E8F5E9" CornerRadius="4" Padding="8,4">
                                        <TextBlock Text="稳定版" FontSize="11" Foreground="#2E7D32" FontWeight="SemiBold"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- 版本详情 -->
                    <Border Style="{StaticResource SettingCard}">
                        <StackPanel>
                            <TextBlock Text="版本详情" FontSize="16" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,16"/>

                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="版本号：" Foreground="#6C757D" FontSize="13"/>
                                <TextBlock Grid.Column="1" Text="1.0.0" FontWeight="SemiBold" FontSize="13"/>
                            </Grid>

                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="发布日期：" Foreground="#6C757D" FontSize="13"/>
                                <TextBlock Grid.Column="1" Text="2024-01-01" FontWeight="SemiBold" FontSize="13"/>
                            </Grid>

                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="框架版本：" Foreground="#6C757D" FontSize="13"/>
                                <TextBlock Grid.Column="1" Text=".NET 8.0" FontWeight="SemiBold" FontSize="13"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="数据库：" Foreground="#6C757D" FontSize="13"/>
                                <TextBlock Grid.Column="1" Text="SQLite 3" FontWeight="SemiBold" FontSize="13"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- 关于和反馈 -->
                    <Border Style="{StaticResource SettingCard}">
                        <StackPanel>
                            <TextBlock Text="关于与支持" FontSize="16" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,16"/>

                            <Border Style="{StaticResource InfoCard}">
                                <StackPanel>
                                    <TextBlock Text="开发者" FontSize="11" Foreground="#6C757D" Margin="0,0,0,4"/>
                                    <TextBlock Text="SelfTracker Team" FontSize="13" FontWeight="SemiBold" Foreground="#2C3E50"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource InfoCard}">
                                <StackPanel>
                                    <TextBlock Text="许可协议" FontSize="11" Foreground="#6C757D" Margin="0,0,0,4"/>
                                    <TextBlock Text="MIT License" FontSize="13" FontWeight="SemiBold" Foreground="#2C3E50"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource InfoCard}">
                                <StackPanel>
                                    <TextBlock Text="版权信息" FontSize="11" Foreground="#6C757D" Margin="0,0,0,4"/>
                                    <TextBlock Text="© 2024 SelfTracker. All rights reserved." FontSize="13" FontWeight="SemiBold" Foreground="#2C3E50"/>
                                </StackPanel>
                            </Border>

                            <UniformGrid Columns="2" Margin="0,16,0,0">
                                <Button Content="检查更新"
                                      Style="{StaticResource SecondaryButton}"
                                      Padding="0,10"
                                      Margin="0,0,6,0"/>
                                <Button Content="访问官网"
                                      Style="{StaticResource SecondaryButton}"
                                      Padding="0,10"
                                      Margin="6,0,0,0"/>
                            </UniformGrid>
                        </StackPanel>
                    </Border>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
